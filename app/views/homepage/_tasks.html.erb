<div class="container">
  <nav class="nav nav-tabs gap-2 flex-row flex-nowrap overflow-auto py-2" style="overflow-y: hidden !important;">
    <a class="nav-link text-nowrap active" data-bs-toggle="tab" href="#all" role="tab" aria-selected="true">All</a>
    <a class="nav-link text-nowrap" data-bs-toggle="tab" href="#gclass" role="tab" aria-selected="true">Google Classroom</a>
    <a class="nav-link text-nowrap" data-bs-toggle="tab" href="#work" role="tab" aria-selected="false">Work</a>
    <a class="nav-link text-nowrap" data-bs-toggle="tab" href="#personal" role="tab" aria-selected="false">Personal</a>
    <a class="nav-link text-nowrap" data-bs-toggle="tab" href="#wishlist" role="tab" aria-selected="false">Wishlist</a>
  </nav>

  <div class="tab-content pt-2">
    <div class="tab-pane fade show active" id="all" role="tabpanel">
      <div class="w-100" data-bs-toggle="collapse" href="#previous" role="button" aria-expanded="false" aria-controls="previous">
        <a class="text-decoration-none nav-link ">
          <span class="ms-1 text-light dropdown-toggle">Previous</span>
        </a>
        <div class="collapse show pt-2" id="previous">
          <div class="card border border-0">
            <ul class="list-group d-flex flex-row p-2 align-items-center gap-2" style='background-color: #514c85'>
              <input class="form-check-input ms-2 col-2" type="radio" name="listGroupRadio" value="" id="secondRadio">
              <div class="d-flex flex-column align-items-start align-items-md-center col-9">
                <label class="form-check-label" for="secondRadio">Oral Examination (CCNA 223)</label>
                <div class="d-flex align-items-center">
                  <p class="mb-0 text-danger">05-10 09:00 am</p>
                  <%= bootstrap_icon 'bell-fill', class: 'ms-2'%><%= bootstrap_icon 'list-task', class: 'ms-2'%>
                </div>
              </div>
              <%= bootstrap_icon 'flag', class: 'col-1'%>
            </ul>
          </div>
        </div>
      </div>

      <div class="w-100 pt-2" data-bs-toggle="collapse" href="#today" role="button" aria-expanded="false" aria-controls="today">
        <a class="text-decoration-none nav-link ">
          <span class="ms-1 text-light dropdown-toggle">Today</span>
        </a>
        <div class="collapse show pt-2" id="today">
          <div class="card border border-0">
            <ul class="list-group d-flex flex-row p-2 align-items-center gap-2" style='background-color: #514c85'>
              <input class="form-check-input ms-2 col-2" type="radio" name="listGroupRadio" value="" id="secondRadio">
              <div class="d-flex flex-column align-items-start align-items-md-center col-9">
                <label class="form-check-label" for="secondRadio">Tasktifer UI/UX</label>
                <div class="d-flex align-items-center">
                  <p class="mb-0 text-warning">05-10 12:00 am</p>
                  <%= bootstrap_icon 'bell-fill', class: 'ms-2'%><%= bootstrap_icon 'list-task', class: 'ms-2'%>
                </div>
              </div>
              <%= bootstrap_icon 'flag', class: 'col-1'%>
            </ul>
          </div>
        </div>
      </div>

      <div class="w-100 pt-2" data-bs-toggle="collapse" href="#future" role="button" aria-expanded="false" aria-controls="future">
        <a class="text-decoration-none nav-link ">
          <span class="ms-1 text-light dropdown-toggle">Future</span>
        </a>
        <div class="collapse show pt-2" id="future">
          <div class="card border border-0">
            <ul class="list-group d-flex flex-row p-2 align-items-center gap-2" style='background-color: #514c85'>
              <input class="form-check-input ms-2 col-2" type="radio" name="listGroupRadio" value="" id="secondRadio">
              <div class="d-flex flex-column align-items-start align-items-md-center col-9">
                <label class="form-check-label" for="secondRadio">Gui Calculator (JSwing)</label>
                <div class="d-flex align-items-center">
                  <p class="mb-0 text-info">11-28 1:30 pm</p>
                  <%= bootstrap_icon 'bell-fill', class: 'ms-2'%><%= bootstrap_icon 'list-task', class: 'ms-2'%>
                </div>
              </div>
              <%= bootstrap_icon 'flag', class: 'col-1'%>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="gclass" role="tabpanel">
      <p>GClassroom task</p>
    </div>
    <div class="tab-pane fade" id="work" role="tabpanel">
      <p>Work task</p>
    </div>
    <div class="tab-pane fade" id="personal" role="tabpanel">
      <p>Personal task</p>
    </div>
    <div class="tab-pane fade" id="wishlist" role="tabpanel">
      <p>Wishlist task</p>
    </div>
  </div>
</div>
