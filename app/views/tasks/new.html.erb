<%= turbo_frame_tag :new_task_frame do %>
  <div class="modal-body">
    <%= form_with(model: @task, data: { turbo: false }) do |form| %>
      <div class="form-group">
        <div class="mb-3">
          <%= form.label :title, class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control bg-dark text-light', placeholder: 'Input new task here...', id: 'task_title' %>
        </div>
        <div class="mb-3">
          <%= form.label :category, class: 'form-label' %>
          <%= form.select :category_id, options_for_select(current_user.categories.pluck(:name, :id)), { include_blank: 'No Category' }, class: 'form-select bg-dark text-light', id: 'category' %>
        </div>
        <div class="mb-3">
          <%= form.label :due_date, class: 'form-label' %>
          <%= form.date_field :due_date, class: 'form-control bg-dark text-light', id: "due_date", value: Date.tomorrow %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= form.submit 'Add task', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
<% end %>
