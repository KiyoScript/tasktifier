<%= turbo_frame_tag :edit_task_frame do %>
  <div class="modal-body">
    <%= form_with(model: @task, data: { turbo: false }) do |form| %>
      <div class="form-group">
        <div class="mb-3">
          <%= form.label :title, class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control', placeholder: 'Input new task here...', id: 'task_title' %>
        </div>
        <div class="mb-3">
          <%= form.label :category, class: 'form-label' %>
          <%= form.select :category, ['Work', 'Personal', 'Wishlist', 'Birthday'], { include_blank: 'No Category' }, class: 'form-select', id: 'task_category' %>
        </div>
        <div class="mb-3">
          <%= form.label :due_date, class: 'form-label' %>
          <%= form.date_field :due_date, class: 'form-control', id: "task_due_date", value: Date.tomorrow %>
        </div>
      </div>
      <div class="modal-footer">
        <%= button_to 'Remove', task_path(@task), method: :delete, data: { method: :delete, confirm: 'Are you sure you want to delete this task?' }, class: 'btn btn-danger' %>
        <%= form.submit 'Update', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
<% end %>
