<div class='tab-pane fade' id='<%= remove_whitespace(category.name) %>' role='tabpanel'>
  <% if category.tasks.where(mark_as_done: 'false').exists? %>
    <%= render partial: 'tasks/task', collection: category.tasks.where(mark_as_done: 'false') %>
  <% else %>
    <%= render partial: 'tasks/no_task', locals: { user: user } %>
  <% end %>
</div>
