<%= form_with model: user, url: admin_user_path(user), html: { method: :patch, class: "d-flex flex-column", novalidate: true }  do |f| %>
  <div class="mb-3">
    <%= f.label :role, class: "form-label" %>
    <%= f.select :role, User.roles.keys.map { |key| [key.humanize, key] }, { }, class: 'form-select bg-dark text-light', id: 'role' %>
  </div>

  <div class="mb-3">
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, autocomplete: "username", class: "form-control bg-dark text-light", value: user_username(user) %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control bg-dark text-light", required: true %>
    <div class="invalid-feedback">Invalid email</div>
  </div>

  <div class="mb-3">
    <%= f.label :gender, class: "form-label" %>
    <%= f.select :gender, User.genders.keys.map { |key| [key.humanize, key] }, { }, class: 'form-select bg-dark text-light', id: 'gender' %>
  </div>
  <div class="mt-4 align-self-end">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
