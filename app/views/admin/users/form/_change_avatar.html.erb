<div class="py-3" data-controller="account--change-avatar">
  <div class="profile-picture mx-auto rounded-circle" style="background-image: url('<%= url_for(user_profile_picture(user)) %>');" data-account--change-avatar-target="avatar">
    <%= link_to "#", class: "edit-icon bg-white", data: { action: "click->account--change-avatar#showFiles" } do %>
      <%= bootstrap_icon 'pencil', class: 'text-warning' %>
    <% end %>
  </div>
  <div class="profile-picture mx-auto rounded-circle d-none" style="background-image:url('');" data-account--change-avatar-target="newAvatar">
    <%= link_to "#", class: "edit-icon bg-white", data: { action: "click->account--change-avatar#showFiles" } do %>
      <%= bootstrap_icon 'pencil', class: 'text-warning' %>
    <% end %>
  </div>
  <%= form_with url: admin_user_path(user.id), model: user, data: { turbo_method: :patch, "account--change-avatar-target": "form" }, class: "px-5 pt-3 d-none" do |f| %>
    <%= f.label :avatar, class: "form-label d-none" %>
    <%= f.file_field :avatar, accept: 'image/jpeg, image/png, image/jpg', class: "formcontrol form-control-sm", data: { action: "change->account--change-avatar#uploadImage" } %>
    <div class="pt-3 d-none">
      <%= button_tag "Cancel", class: "btn btn-light btn-sm px-4", type: "reset", data: { action: "click->account--change-avatar#resetForm", "account--change-avatar-target": "cancel" } %>
      <%= f.submit "Save", class: "btn btn-success btn-sm px-4", data: { "account--change-avatar-target": "submit" } %>
    </div>
  <% end %>
 </div>
