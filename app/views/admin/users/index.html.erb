<div class="card my-3 shadow-sm">
  <div class="card-header border-0 p-4 d-flex justify-content-between">
    <%= search_form_for @filtered_users, url: admin_users_path, class: "d-flex alignitems-center position-relative" do |form| %>
      <%= bootstrap_icon 'search', class:'text-secondary position-absolute ms-2 mt-2', width: '2rem'%>
      <%= form.search_field :username_cont,
        class: "form-control form-control-solid ps-5",
        placeholder: "Search User",
        autocomplete: "off"
      %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table align-middle">
        <thead>
          <tr class="text-center">
            <th scope="col">Id</th>
            <th scope="col">Avatar</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">Total Tasks</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
          </tr>
        </thead>

        <tbody>
          <% if @users.present? %>
            <%= render partial: "admin/users/user", collection: @users, as: :user %>
          <% else %>
            <tr class="text-center">
              <td class="h3 opacity-25 py-4" colspan="4">
                <%= bootstrap_icon 'search', class: 'text-warning me-3' %> No results found.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) if @users.present? %>
  </div>
</div>
