<%= render layout: "admin/users/layout", locals: { user: @user } do %>
  <div class="px-sm-3">
    <ul class="nav nav-pills mb-3 gap-2 flex-row flex-nowrap overflow-auto py-2 style='overflow-y: hidden !important;'" id="pills-tab" role="tablist" >
      <li class="nav-item" role="presentation">
        <button class="nav-link <%= params[:tab] == "settings" ? '' : 'active' %> " id="pills-dashboard-tab" data-bs-toggle="pill" data-bs-target="#pills-dashboard" type="button" role="tab" aria-controls="pills-dashboard" aria-selected="true">Dashboard</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-details-tab" data-bs-toggle="pill" data-bs-target="#pills-details" type="button" role="tab" aria-controls="pills-details" aria-selected="false">Details</button>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade <%= params[:tab] == "settings" ? ' ' : 'show active'%>" id="pills-dashboard" role="tabpanel" aria-labelledby="pills-dashboard-tab" tabindex="0">
        <%= render partial: "admin/users/dashboard", locals: { user: @user } %>
      </div>
      <div class="tab-pane fade" id="pills-details" role="tabpanel" aria-labelledby="pills-details-tab" tabindex="0">
        <%= render partial: "admin/users/form/profile_details", locals: { user: @user } %>
      </div>
    </div>
    <hr class="mt-5 mb-4">
  </div>
<% end %>
