<%= form_with url: account_profile_path(current_user), model: current_user, html: { method: :delete, class: "d-flex flex-column", novalidate: true } do |f| %>
  <div class="card p-2 shadow border border-0">
    <div class="card-header w-100 text-end border border-0", style="background-color: #32383e">
      <%= bootstrap_icon 'exclamation-circle', class: 'text-warning',
        width: '1.3rem',
        data: { bs_toggle: 'tooltip', bs_placement: 'left', bs_original_title: 'Goodbye :(' }
      %>
    </div>
    <div class="card-body d-flex flex-column align-items-center justify-content-center text-nowrap">
      <p class="text-info text-wrap">
        Temporarily deactivate or permanently delete your account
      </p>

      <div class="row gx-5">
        <div class="col-6">
          <%= button_to "Delete my account", account_profile_path(current_user), class: 'btn btn-danger btn-sm', data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
        </div>
        <div class="col-6">
          <%= button_to "Deactivate", account_status_path(current_user), class: 'btn btn-outline-danger btn-sm', data: { controller: 'account--deactivation', action: 'click->account--deactivation#updateStatus', confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :patch %>
        </div>
      </div>
    </div>
  </div>
<% end %>
